- content_for :title do
  Account

= form_for @organization, '/accounts/me', :method=>:put, :builder=>UtilityFormBuilder, :class=>'form form-horizontal' do |f|
  .form-group
    %label{:for=>'name',:class=>['col-md-2 control-label'] }
      Name:
    .col-md-5
      = f.text_field :name, :class=>'form-control'
    = f.error_messages_for :name
  .form-group
    %label{:class=>'col-md-2 control-label'}
      Account created at:
    .col-md-5
      %p
        = @account.created_at
  .form-group
    %label{:class=>'col-md-2 control-label'}
      Account last updated at:
    .col-md-5
      %p
        = @account.updated_at
  .form-actions
    .row
      .col-md-10{:class=>'col-md-offset-2'}
        = f.submit 'Send',:class => "btn btn-primary"