- content_for :title do
  Sign up

= form_for @user, '/users', :builder=>UtilityFormBuilder, :class=>'form form-horizontal' do |f|
  .form-group{:class=>('has-error' unless @user.errors[:name].empty?)}
    %label{:for=>'name',:class=>['col-md-2 control-label'] }
      Name:
    .col-md-5
      = f.text_field :name, :class=>'form-control'
    = f.error_messages_for :name
  .form-group{:class=>('has-error' unless @user.errors[:email].empty?)}
    %label{:for=>'email',:class=>'col-md-2 control-label'}
      Email:
    .col-md-5
      = f.email_field :email, :class=>'form-control'
    = f.error_messages_for :email
  .form-group{:class=>('has-error' unless @user.errors[:password_hash].empty?)}
    %label{:for=>'password',:class=>'col-md-2 control-label'}
      Password:
    .col-md-5
      = f.password_field :password, :class=>'form-control'
    = f.error_messages_for :password_hash
  .form-actions
    .row
      .col-md-10{:class=>'col-md-offset-2'}
        = f.submit 'Send',:class => "btn btn-primary"