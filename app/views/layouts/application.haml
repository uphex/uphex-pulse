!!! 5

%html{:lang => 'en'}
  %head
    %meta{:charset => 'utf-8'}
    %title
      = yield_content :title

    != css :application, :media => 'screen'
    != js :app

  %body{:class=>'contrast-muted'}
    %header
      %div{:class=>"navbar navbar-default"}
        %a{:href=>'/',:class=>'navbar-brand'}
          Uphex
        - if env['warden'].authenticated?
          %ul{:class=>'nav'}
            %li.dropdown.dark.user-menu
              %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
                %span.user-name
                  = env['warden'].user.name
                %b.caret
              %ul.dropdown-menu
                %li= link_to 'your account', '#'
                %li.divider
                %li= link_to 'logout', 'sessions/auth/logout'
    %div{:id=>'wrapper'}
      %nav{:id=>'main-nav'}
        %div{:class=>'navigation'}
          %ul{:class=>'nav nav-stacked'}
            = yield_content :navigation
      %section{:id=>'content'}
        .container
          #content-wrapper.row
            .col-xs-12
              / page header container
              .row
                .col-sm-12
                  .page-header
                    / page title
                    %h1.pull-left
                      %span
                        = yield_content :title
            = flash_tag :notice, :class=>'alert alert-info'
            = yield