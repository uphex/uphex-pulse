!!! 5

%html{:lang => 'en'}
  %head
    %meta{:charset => 'utf-8'}
    %title
      = yield_content :title

    != css :application, :media => 'screen'
    != js :app

  %body{:class=>'contrast-muted'}
    %header
      %div{:class=>"navbar navbar-default"}
        %a{:href=>'/',:class=>'navbar-brand'}
          Uphex
        - if env['warden'].authenticated?
          %ul{:class=>'nav'}
            %li.dropdown.dark.user-menu
              %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
                %span.user-name
                  = env['warden'].user.name
                %b.caret
              %ul.dropdown-menu
                %li= link_to 'My profile', '/users/me'
                %li= link_to 'My account', '/accounts/me'
                %li.divider
                %li
                  %a{:onclick=>"logout_form.submit();",:href=>'#'}
                    Log out
                  %form{:action=>'/users/me/session',:method=>'POST',:id=>'logout_form'}
                    = csrf_token_field
                    %input{:type=>'hidden',:name=>'_method',:value=>'DELETE'}
    %div{:id=>'wrapper'}
      %nav{:id=>'main-nav'}
        %div{:class=>'navigation'}
          %ul{:class=>'nav nav-stacked'}
            - if env['warden'].authenticated?
              %li{:class=>('active' if request.path_info=='/users/me/dashboard')}= link_to 'Dashboard', '/users/me/dashboard'
              %li{:class=>('active' if request.path_info=='/users/me')}= link_to 'Profile', '/users/me'
              %li{:class=>('active' if request.path_info=='/accounts/me')}= link_to 'Account', '/accounts/me'
              %li{:class=>('active' if request.path_info=='/portfolios')}= link_to 'Portfolios', '/portfolios'
            - else
              %li{:class=>('active' if request.path_info=='/sessions/new')}= link_to 'Sign in', '/sessions/new'
              %li{:class=>('active' if request.path_info=='/users/new')}= link_to 'Sign up', '/users/new'
      %section{:id=>'content'}
        .container
          #content-wrapper.row
            .col-xs-12
              / page header container
              .row
                .col-sm-12
                  .page-header
                    / page title
                    %h1.pull-left
                      %span
                        = yield_content :title
            = flash_tag :notice, :class=>'alert alert-info'
            = flash_tag :error, :class=>'alert alert-danger'
            = yield